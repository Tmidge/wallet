<p id="notice"><%= notice %></p>

<h1>Balance</h1>
<p><%= number_to_currency(@balance) %></p>
<p><%= if @balance < 0
  "Probably want to not be so poor."
end %></p>

<p>You have <%= @transactions.count%> transactions on your account.</p>

<table style= "width:50%">
  <thead>
    <tr>
      <th colspan="5"style="font-size:1.5em;text-decoration:underline; padding-bottom:1em">Transactions</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td style= "text-align:right"><%= number_to_currency(transaction.deposit) %></td>
        <td style= "text-align:right; font-weight:600"><%= transaction.created_at %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
